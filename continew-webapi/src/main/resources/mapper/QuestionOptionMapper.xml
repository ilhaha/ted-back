<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.continew.admin.examconnect.mapper.QuestionOptionMapper">

    <select id="selectByQuestionId" resultType="top.continew.admin.exam.model.req.dto.OptionDTO">
        SELECT
            id,
            is_correct_answer AS isCorrect
        FROM ted_step
        WHERE question_bank_id = #{questionId}
        ORDER BY id ASC
    </select>

</mapper>
